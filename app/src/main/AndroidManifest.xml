<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahmoud.secretarysystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".secretary.SecretaryProfileActivity"
            android:label="@string/title_activity_secretary_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".manager.mng_Home"
            android:label="@string/title_activity_mng__home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>